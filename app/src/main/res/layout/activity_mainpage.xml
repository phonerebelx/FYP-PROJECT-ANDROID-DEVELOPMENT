<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F4EE"
    android:backgroundTint="#EAF4EA"
    tools:context=".mainpage">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        android:layout_width="149dp"
        android:layout_height="128dp"
        android:text="Upload Photo"
        android:drawableLeft="@drawable/ic_baseline_file_upload_24"
        android:textColor="@color/black"
        app:backgroundTint="#E1E1E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.344" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton1"
        android:layout_width="149dp"
        android:layout_height="128dp"
        android:drawableLeft="@drawable/ic_baseline_add_a_photo_24"
        android:text="Take Photo"
        android:textColor="@color/black"
        app:backgroundTint="#E1E1E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.344" />

    <Button
        android:id="@+id/button"
        android:layout_width="149dp"
        android:layout_height="128dp"
        android:text="Diagnose"
        android:textColor="@color/black"
        app:backgroundTint="#E1E1E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.665" />

    <Button
        android:id="@+id/button2"
        android:layout_width="149dp"
        android:layout_height="128dp"
        android:text="About Diseases"
        android:textColor="@color/black"
        app:backgroundTint="#E1E1E1"
        android:drawableLeft="@drawable/ic_baseline_question_mark_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.665" />
</androidx.constraintlayout.widget.ConstraintLayout>